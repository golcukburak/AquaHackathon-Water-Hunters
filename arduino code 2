#define sulamaSuresi 10000
#define beklemeSuresi 16000
int nem = 0; // 500 ün üstü kuru
#define cokKuru 800
#define kuru 600
#define normal 400
#define nemli 200
#define sensornemTo  A0
#define sensornemT1  A1
#define sensornemT2  A2
#define sensorisinem  3
#define motor  4
int topraknem;
int a=1;
void setup() {
 pinMode(motor, OUTPUT);
 pinMode(sensornemTo, INPUT);
 
}

void loop() {
  topraknem=analogRead(sensornemTo);
  Serial.println(topraknem);
  if(topraknem>cokKuru){ 
    digitalWrite(motor,HIGH);
    delay(sulamaSuresi+3000);
    digitalWrite(motor,LOW);
    delay(beklemeSuresi-10000);
  }
  else if(topraknem>kuru){
        digitalWrite(motor,HIGH);
        delay(sulamaSuresi);
        digitalWrite(motor,LOW);
        delay(beklemeSuresi-6000);
  }
    else if(topraknem>normal){
        digitalWrite(motor,HIGH);
        delay(sulamaSuresi-2500);
        digitalWrite(motor,LOW);
        delay(beklemeSuresi);
  }
      else if(topraknem>nemli){
        digitalWrite(motor,HIGH);
        delay(sulamaSuresi-4000);
        digitalWrite(motor,LOW);
        delay(beklemeSuresi+6000);
  }
  else{
    digitalWrite(motor,LOW);
    delay(beklemeSuresi);
  }
 
}
